<?xml version="1.0"?>
<package format="3">
  <name>moveit_config_h2017</name>
  <version>1.0.0</version>
  <description>
    An automatically generated package with all the configuration and launch files for using the h2017 with the MoveIt! Motion Planning Framework
  </description>
  <author email="jinhyuk.gong@doosan.com">Jinhyuk.Gong</author>
  <maintainer email="jinhyuk.gong@doosan.com">Jinhyuk.Gong</maintainer>

  <license>BSD</license>

  <buildtool_depend>ament_cmake</buildtool_depend>

  <depend>moveit_resources_panda_description</depend>
  <depend>dsr_description2</depend>
  <depend>moveit_ros_move_group</depend>
  <!--<depend>moveit_fake_controller_manager</depend>-->
  <depend>moveit_kinematics</depend>
  <depend>moveit_planners_ompl</depend>
  <depend>moveit_ros_visualization</depend>
  <build_depend>moveit_common</build_depend>

  <depend>moveit_ros_planning_interface</depend>
  <depend>joint_state_publisher</depend>
  <depend>joint_state_publisher_gui</depend>
  <depend>robot_state_publisher</depend>
  <depend>xacro</depend>
  <depend>moveit_planners</depend>
  <depend>moveit_simple_controller_manager</depend>
  <!-- The next 2 packages are required for the gazebo simulation.
       We don't include them by default to prevent installing gazebo and all its dependencies. -->
  <depend>joint_trajectory_controller</depend>
  <depend>joint_state_broadcaster</depend>
  <!-- <depend>gazebo_ros_control</depend> -->
  <depend>controller_manager</depend>
  <depend>moveit_configs_utils</depend>
  <depend>moveit_ros_warehouse</depend>
  <depend>moveit_setup_assistant</depend>
  <build_depend>rviz2</build_depend>
  <depend>rviz_common</depend>
  <depend>rviz_default_plugins</depend>
  <depend>tf2_ros</depend>
  <!-- TODO(#40): Package not available in ROS 2, find equivalent when migrating launch files
  <depend>topic_tools</depend>
  <depend>warehouse_ros_mongo</depend>
  -->

  <export>
      <build_type>ament_cmake</build_type>
  </export>
</package>
